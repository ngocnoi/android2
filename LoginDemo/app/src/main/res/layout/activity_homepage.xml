<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepage">


    <TextView
        android:id="@+id/txtTitle1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="119dp"
        android:text="Book Categories" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recy_category"
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:layout_below="@+id/txtTitle1"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:paddingTop="50dp" />

    <TextView
        android:id="@+id/txtTitle2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/recy_category"
        android:layout_marginTop="7dp"
        android:text="Popular Books" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recy_id"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_above="@+id/bottom_navigation"
        android:layout_below="@+id/txtTitle2"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="3dp"
        android:paddingTop="50dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
    android:background="#f0f"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bottom_navigation"
    app:itemTextColor="@drawable/selector"
    app:itemIconTint="@drawable/selector"
    app:menu="@menu/menu_navigation"
    android:layout_alignParentBottom="true">

    </com.google.android.material.bottomnavigation.BottomNavigationView>


</RelativeLayout>